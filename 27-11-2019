#include <stdio.h>

int main()
{
    char nombre[] = "Judith";  //esto es un array de caracteres, aun no vimos esto
    printf("Hola %s que tal estas?", nombre);

    //-----------------------------------------------------------------------------------------------------

    int edad;
    printf("\n Que edad tienes?");
    scanf("%i", &edad);
    printf("\n Tienes %d a√±os.", edad);

    //-----------------------------------------------------------------------------------------------------

    char inicial;
    printf("\n Cual es la inicial de tu nombre?");
    scanf("%i", &inicial);
    printf("\n La inicial de tu nombre es %c ", inicial);

    //-----------------------------------------------------------------------------------------------------

    int num, num2, num3;
    char letra;

    printf("\n Dime un numero");
    scanf("%i", &num);
    printf("\n Dime el segundo numero");
    scanf("%i", &num2);
    printf("\n Dime el tercer numero");
    scanf("%i", &num3);

    printf("\n Dime una letra");
    scanf("%i", letra);

    printf("\n Estos son los tres numeros %d, %d y %d, la letra es %c", num, num2, num3, letra);

}
